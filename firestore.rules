rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is in the whitelist (if using a collection)
    // For now, we rely on the app-side check or assume only allowed users can sign in via Auth rules
    
    match /items/{itemId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.createdBy == request.auth.uid;
      allow update: if isAuthenticated(); // Allow updating status/price
      allow delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
    
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /types/{typeId} {
      allow read, write: if isAuthenticated();
    }

    match /units/{unitId} {
      allow read, write: if isAuthenticated();
    }
  }
}
