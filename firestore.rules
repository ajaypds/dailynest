rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is in the whitelist (if using a collection)
    // For now, we rely on the app-side check or assume only allowed users can sign in via Auth rules
    
    // Helper to check if user is member of a household
    function isHouseholdMember(householdId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/households/$(householdId)) &&
        request.auth.uid in get(/databases/$(database)/documents/households/$(householdId)).data.members;
    }

    match /items/{itemId} {
      allow read: if isAuthenticated() && isHouseholdMember(resource.data.householdId);
      allow create: if isAuthenticated() && isHouseholdMember(request.resource.data.householdId);
      allow update: if isAuthenticated() && isHouseholdMember(resource.data.householdId);
      allow delete: if isAuthenticated() && isHouseholdMember(resource.data.householdId);
    }
    
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /types/{typeId} {
      allow read: if isAuthenticated() && isHouseholdMember(resource.data.householdId);
      allow create: if isAuthenticated() && isHouseholdMember(request.resource.data.householdId);
      allow update: if isAuthenticated() && isHouseholdMember(resource.data.householdId);
      allow delete: if isAuthenticated() && isHouseholdMember(resource.data.householdId);
    }

    match /units/{unitId} {
      allow read: if isAuthenticated() && isHouseholdMember(resource.data.householdId);
      allow create: if isAuthenticated() && isHouseholdMember(request.resource.data.householdId);
      allow update: if isAuthenticated() && isHouseholdMember(resource.data.householdId);
      allow delete: if isAuthenticated() && isHouseholdMember(resource.data.householdId);
    }

    match /households/{householdId} {
      allow read: if isAuthenticated() && request.auth.uid in resource.data.members;
      allow create: if isAuthenticated(); // Users can create new households
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.ownerId || 
        request.auth.uid in resource.data.members ||
        (
           // Allow joining: Add self to members, no other changes
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']) &&
           request.resource.data.members.size() == resource.data.members.size() + 1 &&
           request.resource.data.members.hasAll(resource.data.members) &&
           request.auth.uid in request.resource.data.members
        )
      );
    }

    match /invitations/{invitationId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.fromUser || 
        request.auth.token.email == resource.data.toEmail ||
        isHouseholdMember(resource.data.householdId)
      );
      allow create: if isAuthenticated() && isHouseholdMember(request.resource.data.householdId);
      allow update: if isAuthenticated() && (request.auth.uid == resource.data.fromUser || request.auth.token.email == resource.data.toEmail);
      allow delete: if isAuthenticated() && (request.auth.uid == resource.data.fromUser || request.auth.token.email == resource.data.toEmail || isHouseholdMember(resource.data.householdId));
    }
  }
}
